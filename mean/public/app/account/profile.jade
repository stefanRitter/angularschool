.container
  .well
    form.form-horizontal(name="profileForm")
      fieldset
        legend User Profile
        .form-group
          label.col-md-2.control-label(for="email") Email
          .col-md-10
            input.form-control(name="email", type="text", placeholder="Email", ng-model="currentUser.username", required)
        .form-group
          label.col-md-2.control-label(for="fname") Firt name
          .col-md-10
            input.form-control(name="fname", type="text", placeholder="First Name", ng-model="currentUser.firstName", required)
        .form-group
          label.col-md-2.control-label(for="lname") Last name
          .col-md-10
            input.form-control(name="lname", type="text", placeholder="Last Name", ng-model="currentUser.lastName", required)
        .form-group
          label.col-md-2.control-label(for="password") Password
          .col-md-10
            input.form-control(name="password", type="password", placeholder="Password", ng-model="currentUser.password")
      
        .form-group
          .col-md-10.col-md-offset-2
            .pull-right
              button.btn.btn-primary(ng-click="update()", ng-disabled="signupForm.$invalid") Submit
              | &nbsp;
              a.btn.btn-default(href="/") Cancel
